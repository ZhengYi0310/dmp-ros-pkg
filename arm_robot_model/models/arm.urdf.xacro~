            <parent link="${side}_UPPER_ARM_IN_SHOULDER"/>
            <child link="${side}_UPPER_ARM"/>
            <origin xyz="0 0 0" rpy="-${0.5 * PI} 0 ${reflect*HR_offset}"/>
            <axis xyz="0 ${-1*reflect} 0"/>
